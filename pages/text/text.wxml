<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello World\n</text>
<text>小程序，你好！\n</text>

<!-- 2.selectable: true -->
<!-- 默认情况下text中的文本长按是不能选中的 -->
<text selectable="{{true}}">Hello 不良人\n</text>
<text selectable>Hello 不良人\n</text>

<!-- 3.space: 决定文本空格的大小 -->
<text>Hello 不良人\n</text>
<!-- 根据字体设置的空格大小 -->
<text space="nbsp">Hello 不良人\n</text>
<!-- 半个中文字符大小 -->
<text space="ensp">Hello 不良人\n</text>
<!-- 一个中文字符大小 -->
<text space="emsp">Hello 不良人\n</text>

<!-- 4. decode属性: 是否解码文本 -->
<text>5 &gt; 3</text>
<text decode>5 &gt; 3</text>
