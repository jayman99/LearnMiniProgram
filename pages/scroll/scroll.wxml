<!--pages/scroll/scroll.wxml-->
<!-- 1.水平滚动：scroll-x -->
<scroll-view class="container_x" scroll-x>
  <!-- view为块级元素 -->
  <view wx:for="{{10}}" class="item_01">{{item}}</view>
</scroll-view>

<!-- 2.垂直滚动：scroll-y -->
<scroll-view class="container_y" scroll-y>
  <view wx:for="{{10}}" class="item_02">{{item}}</view>
</scroll-view>

<!-- 3.补充 -->
<scroll-view class="container_y" 
             scroll-y
             bindscroll="handleScroll">
  <view wx:for="{{10}}" class="item_02">{{item}}</view>
</scroll-view>